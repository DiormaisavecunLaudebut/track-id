var post = document.querySelector('[data-post-id="<%= @post.id %>"]');
var alreadyViewed = "<%= @already_viewed %>" == 'true'

function addView() {
  if (alreadyViewed) {
  var views = post.dataset.postViews;
  post.dataset.postViews = parseInt(views, 10) + 1;
  post.classList.add('view_added');
  }
}

addView();
