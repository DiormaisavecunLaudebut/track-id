<div class="post-actions">
  <%= link_to post_tracked_path(post.id), remote: :true, method: :post do %>
  <div class="post-action">
    <%= cl_image_tag 'loupe', width: 30, height: 30, class: 'loupe-action' %>
    <p>Track this post</p>
  </div>
  <% end %>
  <%= link_to post_show_path(post.id), remote: true do %>
  <div class="post-action">
    <i class="far fa-comment-alt"></i>
    <p>Comment</p>
  </div>
  <% end %>
  <div class="post-action">
    <i class="fas fa-external-link-alt"></i>
    <p>Share</p>
  </div>
  <div class="post-action">
    <i class="far fa-user"></i>
    <p>See user profil</p>
  </div>
  <div class="post-action-cancel">
    <p>Cancel</p>
  </div>
</div>
<div class="opacity-filter"></div>
